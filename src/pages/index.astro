---
const title = "SimpleUnitTools";
const description =
  "Simple unit conversions, calculators, and practical explanations for everyday and technical use.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <style>
      :root {
        --max: 900px;
        --text: #111;
        --muted: #333;
        --border: #d8d8d8;
        --link: #551a8b;
        --card-bg: #fff;
        --shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      }

      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        line-height: 1.6;
        color: var(--text);
        background: #fff;
      }

      main {
        max-width: var(--max);
        margin: 2rem auto;
        padding: 0 1rem;
      }

      h1 {
        font-size: 3rem;
        margin: 0 0 0.4rem;
      }

      header p {
        font-size: 1.1rem;
        margin: 0 0 1rem;
        color: var(--muted);
      }

      hr {
        border: 0;
        border-top: 1px solid var(--border);
        margin: 1rem 0 1.4rem;
      }

      /* === Popular Tools (3 columns) === */
      .popular-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.4rem;
        margin: 1rem 0 2rem;
      }

      .card {
        border: 1px solid #e3e3e3;
        padding: 1.6rem 1.8rem;
        background: var(--card-bg);
        box-shadow: var(--shadow);
      }

      .card h2 {
        white-space: nowrap;
        margin: 0 0 0.8rem;
        font-size: 1.8rem;
        font-weight: 700;
        line-height: 1.2;
      }

      .card ul {
        font-size: 1.02rem;
      }

      .card li {
        margin: 0.72rem 0;
      }

      ul {
        margin: 0;
        padding-left: 1.2rem;
      }

      a {
        color: var(--link);
        text-decoration: underline;
      }

      section h2 {
        font-size: 2rem;
        margin: 1.2rem 0 0.6rem;
      }

      footer {
        font-size: 0.95rem;
      }

      /* === Tech & Networking block === */
      .big-box {
        border: 1px solid var(--border);
        background: #fff;
        padding: 28px;
        margin: 18px 0 28px;
      }

      .two-col {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: start;
      }

      /* Slight emphasis for center column */
      .popular-grid .card:nth-child(2) {
        border-color: #d0d0d0;
      }

      /* Responsive */
      @media (max-width: 780px) {
        h1 {
          font-size: 2.2rem;
        }

        .popular-grid {
          grid-template-columns: 1fr;
        }

        .two-col {
          grid-template-columns: 1fr;
        }

        section h2 {
          font-size: 1.8rem;
        }
      }
    </style>
  </head>

  <body>
    <main>
      <header>
        <h1>SimpleUnitTools</h1>
        <p>
          Simple unit conversions, calculators, and practical explanations for
          everyday and technical use.
        </p>
        <hr />
      </header>

      <!-- Popular Tools -->
      <div class="popular-grid">
        <div class="card">
          <h2>Basic Converters</h2>
          <ul>
            <li><a href="/cm-to-inch/">cm to inch converter</a></li>
