---
const title = "Fuel Consumption Calculator";
const description =
  "Calculate fuel consumption fast. Includes an interactive calculator (MPG, L/100km, km/L), cost-per-trip estimates, quick formulas, reference tables, real-world examples, and an FAQ.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <style>
      :root{
        --bg: #f5f7fb;
        --card: #ffffff;
        --text: #0f172a;
        --muted: #64748b;
        --line: #e5e7eb;
        --primary: #2b6cb0;
        --primary-2: #1e4e8c;
        --soft: #eef6ff;
        --soft-2: #d9ecff;
        --shadow: 0 6px 18px rgba(15, 23, 42, .08);
        --radius: 12px;
        --radius-sm: 10px;
      }

      *{ box-sizing: border-box; }
      body{
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
        background: var(--bg);
        color: var(--text);
      }

      .wrap{
        max-width: 980px;
        margin: 22px auto;
        padding: 0 16px 32px;
      }

      /* Header */
      .page-title{
        display:flex;
        align-items:center;
        gap: 10px;
        font-size: 20px;
        font-weight: 700;
        margin: 6px 0 14px;
        color: #111827;
      }
      .page-title .icon{
        width: 28px;
        height: 28px;
        border-radius: 8px;
        background: linear-gradient(135deg, var(--primary), #4aa3ff);
        box-shadow: 0 6px 14px rgba(43,108,176,.25);
        display:flex;
        align-items:center;
        justify-content:center;
        color: white;
        font-weight: 800;
      }
      .subtitle{
        margin: 0 0 14px;
        color: var(--muted);
        font-size: 14px;
      }

      /* Card + Tabs */
      .card{
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
      }
      .tabs{
        display:flex;
        gap: 0;
        border-bottom: 1px solid var(--line);
        background: #fff;
        padding: 10px 10px 0;
        overflow-x:auto;
      }
      .tab{
        appearance: none;
        border: 1px solid var(--line);
        border-bottom: none;
        background: #f8fafc;
        color: #334155;
        padding: 10px 14px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        font-weight: 650;
        cursor: pointer;
        white-space: nowrap;
        margin-right: 8px;
      }
      .tab[aria-selected="true"]{
        background: #fff;
        color: var(--primary-2);
        border-color: var(--line);
        box-shadow: 0 -1px 0 #fff inset;
      }

      .panel{ padding: 16px; }

      /* Option block */
      .option-block{
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        padding: 14px;
        background: #fff;
      }
      .option-title{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 10px;
        margin-bottom: 10px;
      }
      .option-title h2{
        font-size: 14px;
        margin: 0;
        color: #111827;
      }
      .hint{
        font-size: 12px;
        color: var(--muted);
      }

      .row{
        display:flex;
        gap: 12px;
        flex-wrap: wrap;
        align-items: flex-end;
      }

      .radio-row{
        display:flex;
        align-items:center;
        gap: 10px;
        padding: 10px 10px;
        border-radius: 10px;
      }
      .radio-row:hover{ background: #f8fafc; }
      .radio-row input[type="radio"]{ transform: translateY(1px); }

      .field{
        display:flex;
        flex-direction: column;
        gap: 6px;
        min-width: 220px;
      }
      .field label{
        font-size: 12px;
        color: #111827;
        font-weight: 650;
      }
      .input{
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: 10px 12px;
        font-size: 14px;
        outline: none;
        width: 100%;
        background: #fff;
      }
      .input:focus{
        border-color: #93c5fd;
        box-shadow: 0 0 0 3px rgba(147,197,253,.35);
      }

      .btn{
        border: 1px solid var(--line);
        background: #fff;
        padding: 10px 14px;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 650;
      }
      .btn:hover{
        border-color: #cbd5e1;
        background: #f8fafc;
      }
      .btn.primary{
        border-color: #93c5fd;
        background: var(--soft);
        color: #0b3b76;
      }

      .inline{
        display:flex;
        align-items:center;
        gap: 10px;
        flex-wrap: wrap;
      }
      .mini{ width: 120px; }

      /* Result area */
      .result{
        margin-top: 14px;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        overflow: hidden;
        background: #fff;
      }
      .result-head{
        background: var(--soft-2);
        padding: 10px 12px;
        font-weight: 800;
        color: #0b3b76;
      }
      .result-body{ padding: 14px 12px; }

      .result-grid{
        display:grid;
        grid-template-columns: 140px 1fr;
        gap: 10px 12px;
        align-items:center;
      }
      .result-grid .k{
        font-size: 13px;
        color: #111827;
        font-weight: 700;
      }
      .result-grid .v{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items:center;
      }

      .pill{
        display:inline-flex;
        align-items:center;
        gap: 8px;
        padding: 8px 10px;
        border: 1px dashed #bfdbfe;
        background: #f0f7ff;
        border-radius: 10px;
        font-size: 13px;
        color: #0b3b76;
        font-weight: 650;
      }

      .table{
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        font-size: 14px;
      }
      .table th, .table td{
        border: 1px solid var(--line);
        padding: 10px 10px;
        text-align: left;
        vertical-align: top;
      }
      .table th{
        background: #f8fafc;
        font-weight: 800;
      }

      .muted{
        color: var(--muted);
        font-size: 13px;
      }

      .foot{
        margin-top: 16px;
        display:flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
      }
      a{ color: var(--primary-2); text-decoration: none; }
      a:hover{ text-decoration: underline; }

      [data-panel]{ display:none; }
      [data-panel].active{ display:block; }

      .note{
        margin-top: 10px;
        padding: 10px 12px;
        border: 1px solid var(--line);
        border-radius: 10px;
        background: #fbfdff;
      }
      .note strong{ color:#111827; }
      .warn{
        border-color: #fde68a;
        background: #fffbeb;
      }

      .split{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items: center;
      }
      .badge{
        font-size: 12px;
        padding: 6px 8px;
        border-radius: 999px;
        border: 1px solid var(--line);
        background: #fff;
        color: #0f172a;
        font-weight: 650;
      }
    </style>
  </head>

  <body>
    <main class="wrap">
      <div class="page-title">
        <div class="icon">⛽</div>
        <div>Fuel Consumption Calculator</div>
      </div>

      <p class="subtitle">
        Calculate fuel economy in <strong>MPG</strong>, <strong>L/100km</strong>, and <strong>km/L</strong> — plus estimate
        <strong>trip fuel cost</strong> when you know distance and fuel price.
      </p>

      <section class="card" aria-label="fuel calculator">
        <div class="tabs" role="tablist" aria-label="Sections">
          <button class="tab" role="tab" aria-selected="true" data-tab="calculator">Calculator</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="formula">Formulas</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="table">Tables</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="examples">Examples</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="faq">FAQ</button>
        </div>

        <div class="panel">
          <!-- Panel: Calculator -->
          <div data-panel="calculator" class="active">
            <div class="option-block">
              <div class="option-title">
                <h2>Interactive Fuel Consumption Calculator</h2>
                <div class="hint">Pick a method, enter values, get MPG / L/100km / km/L</div>
              </div>

              <div>
                <label class="radio-row">
                  <input type="radio" name="mode" value="distance-fuel" checked />
                  <span><strong>Distance + Fuel Used</strong> (best for logs)</span>
                </label>

                <label class="radio-row">
                  <input type="radio" name="mode" value="mpg" />
                  <span><strong>Convert MPG</strong> → L/100km, km/L</span>
                </label>

                <label class="radio-row">
                  <input type="radio" name="mode" value="l100" />
                  <span><strong>Convert L/100km</strong> → MPG, km/L</span>
                </label>

                <label class="radio-row">
                  <input type="radio" name="mode" value="kml" />
                  <span><strong>Convert km/L</strong> → MPG, L/100km</span>
                </label>
              </div>

              <div style="height: 10px;"></div>

              <!-- Inputs -->
              <div class="row" id="inputsRow">
                <!-- Distance + Fuel Used -->
                <div class="field" data-mode="distance-fuel">
                  <label for="distanceInput">Distance</label>
                  <input id="distanceInput" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 120" />
                </div>
                <div class="field" data-mode="distance-fuel">
                  <label for="distanceUnit">Distance unit</label>
                  <select id="distanceUnit" class="input">
                    <option value="mi">miles (mi)</option>
                    <option value="km">kilometers (km)</option>
                  </select>
                </div>

                <div class="field" data-mode="distance-fuel">
                  <label for="fuelInput">Fuel used</label>
                  <input id="fuelInput" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 4" />
                </div>
                <div class="field" data-mode="distance-fuel">
                  <label for="fuelUnit">Fuel unit</label>
                  <select id="fuelUnit" class="input">
                    <option value="gal">US gallons (gal)</option>
                    <option value="l">liters (L)</option>
                  </select>
                </div>

                <!-- MPG mode -->
                <div class="field" data-mode="mpg">
                  <label for="mpgInput">MPG (US)</label>
                  <input id="mpgInput" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 28" />
                </div>

                <!-- L/100km mode -->
                <div class="field" data-mode="l100">
                  <label for="l100Input">L/100km</label>
                  <input id="l100Input" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 7.5" />
                </div>

                <!-- km/L mode -->
                <div class="field" data-mode="kml">
                  <label for="kmlInput">km/L</label>
                  <input id="kmlInput" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 12" />
                </div>

                <button type="button" id="clearBtn" class="btn">Clear</button>

                <div class="inline">
                  <span class="muted">Rounding</span>
                  <select id="roundSelect" class="input mini" aria-label="rounding decimals">
                    <option value="2">2</option>
                    <option value="3" selected>3</option>
                    <option value="4">4</option>
                    <option value="6">6</option>
                  </select>
                  <span class="muted">decimals</span>
                </div>
              </div>

              <div class="note">
                <strong>Tip:</strong> For best accuracy, use a full-tank method (fill up → drive → fill up again) and use the second fill amount as “fuel used.”
              </div>

              <div class="note warn">
                <strong>Important:</strong> This calculator uses <strong>US MPG</strong> (not UK/Imperial). UK MPG values are higher for the same car.
              </div>
            </div>

            <!-- Cost Estimator -->
            <div class="option-block" style="margin-top: 14px;">
              <div class="option-title">
                <h2>Trip Fuel Cost Estimator (optional)</h2>
                <div class="hint">Works after a valid economy is calculated</div>
              </div>

              <div class="row">
                <div class="field">
                  <label for="tripDistance">Trip distance</label>
                  <input id="tripDistance" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 250" />
                </div>
                <div class="field">
                  <label for="tripDistanceUnit">Unit</label>
                  <select id="tripDistanceUnit" class="input">
                    <option value="mi">miles (mi)</option>
                    <option value="km">kilometers (km)</option>
                  </select>
                </div>

                <div class="field">
                  <label for="fuelPrice">Fuel price</label>
                  <input id="fuelPrice" class="input" type="number" inputmode="decimal" step="any" placeholder="e.g. 4.59" />
                </div>
                <div class="field">
                  <label for="fuelPriceUnit">Per</label>
                  <select id="fuelPriceUnit" class="input">
                    <option value="per-gal">US gallon</option>
                    <option value="per-l">liter</option>
                  </select>
                </div>

                <button type="button" id="estimateBtn" class="btn primary">Estimate cost</button>
              </div>

              <div class="note" id="costNote" style="display:none;"></div>
            </div>

            <!-- Result -->
            <div class="result" aria-live="polite">
              <div class="result-head">Result</div>
              <div class="result-body">
                <div class="result-grid">
                  <div class="k">Mode</div>
                  <div class="v">
                    <span id="modeLabel" class="pill">Distance + Fuel Used</span>
                    <span id="unitsLabel" class="pill">mi + gal</span>
                  </div>

                  <div class="k">Expression</div>
                  <div class="v">
                    <input id="exprOutput" class="input" readonly value="MPG = miles ÷ gallons" />
                    <button type="button" id="copyBtn" class="btn primary">Copy</button>
                  </div>

                  <div class="k">Answer</div>
                  <div class="v split">
                    <span id="mpgPill" class="pill">MPG: —</span>
                    <span id="l100Pill" class="pill">L/100km: —</span>
                    <span id="kmlPill" class="pill">km/L: —</span>
                  </div>

                  <div class="k">Recent</div>
                  <div class="v">
                    <div class="muted" id="recentList">No calculations yet.</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Panel: Formulas -->
          <div data-panel="formula">
            <div class="option-block">
              <div class="option-title">
                <h2>Quick Formulas</h2>
                <div class="hint">US MPG ↔ metric conversions</div>
              </div>

              <div class="pill">MPG (US) = miles ÷ gallons</div>
              <div style="height:10px"></div>
              <div class="pill">km/L = kilometers ÷ liters</div>
              <div style="height:10px"></div>
              <div class="pill">L/100km = (liters ÷ kilometers) × 100</div>
              <div style="height:10px"></div>
              <div class="pill">L/100km = 235.214583 ÷ MPG (US)</div>
              <div style="height:10px"></div>
              <div class="pill">MPG (US) = 235.214583 ÷ (L/100km)</div>

              <p class="muted" style="margin: 10px 0 0;">
                Constant uses: 1 mile = 1.609344 km, 1 US gallon = 3.785411784 L.
              </p>
            </div>
          </div>

          <!-- Panel: Tables -->
          <div data-panel="table">
            <div class="option-block">
              <div class="option-title">
                <h2>Reference Tables</h2>
                <div class="hint">Common fuel economy comparisons</div>
              </div>

              <table class="table" aria-label="mpg to l100 table">
                <thead>
                  <tr>
                    <th>MPG (US)</th>
                    <th>L/100km</th>
                    <th>km/L</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>20</td><td>11.7607</td><td>8.5030</td></tr>
                  <tr><td>25</td><td>9.4086</td><td>10.6287</td></tr>
                  <tr><td>30</td><td>7.8405</td><td>12.7545</td></tr>
                  <tr><td>35</td><td>6.7204</td><td>14.8803</td></tr>
                  <tr><td>40</td><td>5.8804</td><td>17.0061</td></tr>
                </tbody>
              </table>

              <table class="table" aria-label="unit constants" style="margin-top:14px;">
                <thead>
                  <tr>
                    <th>Constant</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>1 mile (mi)</td><td>1.609344 km</td></tr>
                  <tr><td>1 kilometer (km)</td><td>0.621371 mi</td></tr>
                  <tr><td>1 US gallon (gal)</td><td>3.785411784 L</td></tr>
                  <tr><td>1 liter (L)</td><td>0.264172 US gal</td></tr>
                </tbody>
              </table>

              <p class="muted" style="margin: 10px 0 0;">
                Tip: Lower <strong>L/100km</strong> is better. Higher <strong>MPG</strong> / <strong>km/L</strong> is better.
              </p>
            </div>
          </div>

          <!-- Panel: Examples -->
          <div data-panel="examples">
            <div class="option-block">
              <div class="option-title">
                <h2>Real-World Examples</h2>
                <div class="hint">Common scenarios</div>
              </div>

              <ul style="margin: 8px 0 0; padding-left: 18px;">
                <li><strong>Road trip log:</strong> 300 miles and 10 gallons → 30 MPG.</li>
                <li><strong>Metric log:</strong> 480 km and 40 liters → 12 km/L → 8.33 L/100km.</li>
                <li><strong>Convert MPG:</strong> 28 MPG → about 8.40 L/100km.</li>
                <li><strong>Cost estimate:</strong> If you drive 250 miles at 30 MPG, you’ll use ~8.33 gallons (then multiply by price/gal).</li>
              </ul>

              <div style="height: 10px;"></div>

              <div class="option-title">
                <h2>Common Mistakes</h2>
                <div class="hint">Avoid bad math</div>
              </div>
              <p class="muted" style="margin: 8px 0 0;">
                Don’t mix <strong>UK (Imperial) gallons</strong> with <strong>US gallons</strong>. Also note that <strong>L/100km</strong> is an inverse scale:
                smaller is better.
              </p>
            </div>
          </div>

          <!-- Panel: FAQ -->
          <div data-panel="faq">
            <div class="option-block">
              <div class="option-title">
                <h2>FAQ</h2>
                <div class="hint">Quick answers</div>
              </div>

              <p style="margin: 8px 0 0;"><strong>What’s the best unit to use?</strong> Use what your region uses. For comparisons, MPG and L/100km are most common.</p>
              <p style="margin: 8px 0 0;"><strong>Why is L/100km “backwards”?</strong> It measures how many liters you burn to go 100 km. Less fuel per distance is better.</p>
              <p style="margin: 8px 0 0;"><strong>Is this city or highway MPG?</strong> This calculator computes based on your inputs. City/highway depends on your driving conditions.</p>
              <p style="margin: 8px 0 0;"><strong>US MPG vs UK MPG?</strong> They are different gallons. UK MPG is higher for the same vehicle.</p>
              <p style="margin: 8px 0 0;"><strong>How do I get accurate numbers?</strong> Fill to the same pump cutoff each time, reset trip meter, then refill and log the second fill amount.</p>
            </div>
          </div>

          <div class="foot">
            <a href="/">← Back to Home</a>
            <span class="muted">SEO-safe, no framework</span>
          </div>
        </div>
      </section>
    </main>

    <script>
      // ---- Constants ----
      const MI_TO_KM = 1.609344;
      const KM_TO_MI = 1 / MI_TO_KM;

      const GAL_TO_L = 3.785411784;     // US gallon
      const L_TO_GAL = 1 / GAL_TO_L;

      // MPG (US) <-> L/100km conversion constant:
      // L/100km = 235.214583 / MPG (US)
      // Derived from 100 km = 62.1371 mi and 1 US gal = 3.78541 L
      const MPG_TO_L100_CONST = 235.214583;

      // ---- Tabs ----
      const tabs = Array.from(document.querySelectorAll(".tab"));
      const panels = Array.from(document.querySelectorAll("[data-panel]"));
      function setTab(name){
        tabs.forEach(t => t.setAttribute("aria-selected", t.dataset.tab === name ? "true" : "false"));
        panels.forEach(p => p.classList.toggle("active", p.dataset.panel === name));
      }
      tabs.forEach(t => t.addEventListener("click", () => setTab(t.dataset.tab)));

      // ---- UI ----
      const modeRadios = Array.from(document.querySelectorAll('input[name="mode"]'));

      const distanceInput = document.getElementById("distanceInput");
      const distanceUnit = document.getElementById("distanceUnit");
      const fuelInput = document.getElementById("fuelInput");
      const fuelUnit = document.getElementById("fuelUnit");

      const mpgInput = document.getElementById("mpgInput");
      const l100Input = document.getElementById("l100Input");
      const kmlInput = document.getElementById("kmlInput");

      const clearBtn = document.getElementById("clearBtn");
      const roundSelect = document.getElementById("roundSelect");

      const tripDistance = document.getElementById("tripDistance");
      const tripDistanceUnit = document.getElementById("tripDistanceUnit");
      const fuelPrice = document.getElementById("fuelPrice");
      const fuelPriceUnit = document.getElementById("fuelPriceUnit");
      const estimateBtn = document.getElementById("estimateBtn");
      const costNote = document.getElementById("costNote");

      const modeLabel = document.getElementById("modeLabel");
      const unitsLabel = document.getElementById("unitsLabel");
      const exprOutput = document.getElementById("exprOutput");
      const copyBtn = document.getElementById("copyBtn");

      const mpgPill = document.getElementById("mpgPill");
      const l100Pill = document.getElementById("l100Pill");
      const kmlPill = document.getElementById("kmlPill");

      const recentList = document.getElementById("recentList");
      const recent = [];

      function round(value, decimals){
        const d = Number(decimals);
        if (!Number.isFinite(d)) return value;
        const factor = Math.pow(10, d);
        return Math.round(value * factor) / factor;
      }

      function getMode(){
        const checked = modeRadios.find(r => r.checked);
        return checked ? checked.value : "distance-fuel";
      }

      function setVisibleInputs(mode){
        const all = Array.from(document.querySelectorAll("[data-mode]"));
        all.forEach(el => {
          el.style.display = (el.getAttribute("data-mode") === mode) ? "" : "none";
        });

        // labels
        if (mode === "distance-fuel"){
          modeLabel.textContent = "Distance + Fuel Used";
          unitsLabel.textContent = `${distanceUnit.value} + ${fuelUnit.value}`;
          exprOutput.value = "MPG = miles ÷ gallons (then converted)";
        } else if (mode === "mpg"){
          modeLabel.textContent = "Convert MPG";
          unitsLabel.textContent = "MPG → L/100km, km/L";
          exprOutput.value = "L/100km = 235.214583 ÷ MPG (US)";
        } else if (mode === "l100"){
          modeLabel.textContent = "Convert L/100km";
          unitsLabel.textContent = "L/100km → MPG, km/L";
          exprOutput.value = "MPG (US) = 235.214583 ÷ (L/100km)";
        } else {
          modeLabel.textContent = "Convert km/L";
          unitsLabel.textContent = "km/L → MPG, L/100km";
          exprOutput.value = "MPG (US) = km/L × 2.35214583";
        }
      }

      function pushRecent(text){
        if (!text) return;
        recent.unshift(text);
        if (recent.length > 10) recent.pop();
        renderRecent();
      }

      function renderRecent(){
        if (recent.length === 0){
          recentList.textContent = "No calculations yet.";
          return;
        }
        recentList.innerHTML = recent.map(s => `<div>• ${s}</div>`).join("");
      }

      function clearOutputs(){
        mpgPill.textContent = "MPG: —";
        l100Pill.textContent = "L/100km: —";
        kmlPill.textContent = "km/L: —";
      }

      function setOutputs(mpg, l100, kml, decimals){
        const d = decimals;
        mpgPill.textContent  = `MPG: ${Number.isFinite(mpg) ? round(mpg, d) : "—"}`;
        l100Pill.textContent = `L/100km: ${Number.isFinite(l100) ? round(l100, d) : "—"}`;
        kmlPill.textContent  = `km/L: ${Number.isFinite(kml) ? round(kml, d) : "—"}`;
      }

      function mpgToL100(mpg){
        return MPG_TO_L100_CONST / mpg;
      }
      function l100ToMpg(l100){
        return MPG_TO_L100_CONST / l100;
      }

      function mpgToKml(mpg){
        // mpg (mi/gal) -> km/L
        // (mpg * km/mi) / (L/gal)
        return (mpg * MI_TO_KM) / GAL_TO_L;
      }
      function kmlToMpg(kml){
        // inverse of above
        return (kml * GAL_TO_L) / MI_TO_KM;
      }
      function kmlToL100(kml){
        return 100 / kml;
      }
      function l100ToKml(l100){
        return 100 / l100;
      }

      function computeFromDistanceFuel(){
        const dist = parseFloat(distanceInput.value);
        const fuel = parseFloat(fuelInput.value);
        if (!Number.isFinite(dist) || !Number.isFinite(fuel) || fuel <= 0 || dist < 0) return null;

        // Normalize to miles + US gallons to get MPG (US)
        let miles = dist;
        if (distanceUnit.value === "km") miles = dist * KM_TO_MI;

        let gallons = fuel;
        if (fuelUnit.value === "l") gallons = fuel * L_TO_GAL;

        if (gallons <= 0) return null;

        const mpg = miles / gallons;
        const l100 = mpgToL100(mpg);
        const kml = mpgToKml(mpg);

        return { mpg, l100, kml, detail: `${dist} ${distanceUnit.value} / ${fuel} ${fuelUnit.value}` };
      }

      function computeFromMpg(){
        const mpg = parseFloat(mpgInput.value);
        if (!Number.isFinite(mpg) || mpg <= 0) return null;
        return { mpg, l100: mpgToL100(mpg), kml: mpgToKml(mpg), detail: `${mpg} MPG` };
      }

      function computeFromL100(){
        const l100 = parseFloat(l100Input.value);
        if (!Number.isFinite(l100) || l100 <= 0) return null;
        const mpg = l100ToMpg(l100);
        return { mpg, l100, kml: l100ToKml(l100), detail: `${l100} L/100km` };
      }

      function computeFromKml(){
        const kml = parseFloat(kmlInput.value);
        if (!Number.isFinite(kml) || kml <= 0) return null;
        const mpg = kmlToMpg(kml);
        return { mpg, l100: kmlToL100(kml), kml, detail: `${kml} km/L` };
      }

      function calculate(){
        const mode = getMode();
        const decimals = roundSelect.value;

        // keep units label fresh
        if (mode === "distance-fuel"){
          unitsLabel.textContent = `${distanceUnit.value} + ${fuelUnit.value}`;
        }

        let out = null;
        if (mode === "distance-fuel") out = computeFromDistanceFuel();
        else if (mode === "mpg") out = computeFromMpg();
        else if (mode === "l100") out = computeFromL100();
        else out = computeFromKml();

        if (!out){
          clearOutputs();
          costNote.style.display = "none";
          return;
        }

        setOutputs(out.mpg, out.l100, out.kml, decimals);

        const msg = `${out.detail} → ${round(out.mpg, decimals)} MPG, ${round(out.l100, decimals)} L/100km, ${round(out.kml, decimals)} km/L`;
        pushRecent(msg);

        // hide cost note until user clicks estimate
        costNote.style.display = "none";
      }

      function estimateCost(){
        // need valid economy first (prefer MPG from current calc)
        const mode = getMode();
        let out = null;
        if (mode === "distance-fuel") out = computeFromDistanceFuel();
        else if (mode === "mpg") out = computeFromMpg();
        else if (mode === "l100") out = computeFromL100();
        else out = computeFromKml();

        const d = roundSelect.value;

        if (!out || !Number.isFinite(out.mpg) || out.mpg <= 0){
          costNote.style.display = "";
          costNote.className = "note warn";
          costNote.innerHTML = "<strong>Need an economy first:</strong> enter values above to calculate MPG/L/100km/km/L, then estimate trip cost.";
          return;
        }

        const td = parseFloat(tripDistance.value);
        const price = parseFloat(fuelPrice.value);
        if (!Number.isFinite(td) || td <= 0 || !Number.isFinite(price) || price <= 0){
          costNote.style.display = "";
          costNote.className = "note warn";
          costNote.innerHTML = "<strong>Missing inputs:</strong> enter trip distance and fuel price.";
          return;
        }

        // Convert trip distance to miles, compute gallons needed using MPG
        let miles = td;
        if (tripDistanceUnit.value === "km") miles = td * KM_TO_MI;

        const gallonsNeeded = miles / out.mpg;
        const litersNeeded = gallonsNeeded * GAL_TO_L;

        let cost;
        let costUnitLabel;

        if (fuelPriceUnit.value === "per-gal"){
          cost = gallonsNeeded * price;
          costUnitLabel = "per gallon";
        } else {
          cost = litersNeeded * price;
          costUnitLabel = "per liter";
        }

        costNote.style.display = "";
        costNote.className = "note";
        costNote.innerHTML =
          `<strong>Estimate:</strong> You’ll use <span class="badge">${round(gallonsNeeded, d)} gal</span> (≈ <span class="badge">${round(litersNeeded, d)} L</span>) ` +
          `and spend <span class="badge">$${round(cost, d)}</span> at $${round(price, d)} ${costUnitLabel}.`;
      }

      // Events
      modeRadios.forEach(r => r.addEventListener("change", () => {
        setVisibleInputs(getMode());
        calculate();
      }));

      [distanceInput, distanceUnit, fuelInput, fuelUnit, mpgInput, l100Input, kmlInput, roundSelect]
        .forEach(el => el.addEventListener("input", calculate));
      [distanceUnit, fuelUnit].forEach(el => el.addEventListener("change", calculate));

      clearBtn.addEventListener("click", () => {
        distanceInput.value = "";
        fuelInput.value = "";
        mpgInput.value = "";
        l100Input.value = "";
        kmlInput.value = "";
        tripDistance.value = "";
        fuelPrice.value = "";
        recent.length = 0;
        renderRecent();
        clearOutputs();
        costNote.style.display = "none";
      });

      estimateBtn.addEventListener("click", estimateCost);

      copyBtn.addEventListener("click", async () => {
        const text = exprOutput.value || "";
        try{
          await navigator.clipboard.writeText(text);
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }catch(e){
          exprOutput.select();
          document.execCommand("copy");
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }
      });

      // Init
      setVisibleInputs(getMode());
      renderRecent();
      calculate();
    </script>
