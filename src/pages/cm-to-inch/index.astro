---
const title = "°C to °F Converter";
const description =
  "Convert Celsius to Fahrenheit easily. Includes an interactive calculator, simple formulas, conversion table, and real-world examples.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <style>
      :root{
        --bg: #f5f7fb;
        --card: #ffffff;
        --text: #0f172a;
        --muted: #64748b;
        --line: #e5e7eb;
        --primary: #2b6cb0;
        --primary-2: #1e4e8c;
        --soft: #eef6ff;
        --soft-2: #d9ecff;
        --shadow: 0 6px 18px rgba(15, 23, 42, .08);
        --radius: 12px;
        --radius-sm: 10px;
      }

      *{ box-sizing: border-box; }
      body{
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
        background: var(--bg);
        color: var(--text);
      }

      .wrap{
        max-width: 980px;
        margin: 22px auto;
        padding: 0 16px 32px;
      }

      /* Header */
      .page-title{
        display:flex;
        align-items:center;
        gap: 10px;
        font-size: 20px;
        font-weight: 700;
        margin: 6px 0 14px;
        color: #111827;
      }
      .page-title .icon{
        width: 28px;
        height: 28px;
        border-radius: 8px;
        background: linear-gradient(135deg, var(--primary), #4aa3ff);
        box-shadow: 0 6px 14px rgba(43,108,176,.25);
        display:flex;
        align-items:center;
        justify-content:center;
        color: white;
        font-weight: 800;
      }
      .subtitle{
        margin: 0 0 14px;
        color: var(--muted);
        font-size: 14px;
      }

      /* Card + Tabs */
      .card{
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
      }
      .tabs{
        display:flex;
        gap: 0;
        border-bottom: 1px solid var(--line);
        background: #fff;
        padding: 10px 10px 0;
        overflow-x:auto;
      }
      .tab{
        appearance: none;
        border: 1px solid var(--line);
        border-bottom: none;
        background: #f8fafc;
        color: #334155;
        padding: 10px 14px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        font-weight: 650;
        cursor: pointer;
        white-space: nowrap;
        margin-right: 8px;
      }
      .tab[aria-selected="true"]{
        background: #fff;
        color: var(--primary-2);
        border-color: var(--line);
        box-shadow: 0 -1px 0 #fff inset;
      }

      .panel{ padding: 16px; }

      /* Option block */
      .option-block{
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        padding: 14px;
        background: #fff;
      }
      .option-title{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap: 10px;
        margin-bottom: 10px;
      }
      .option-title h2{
        font-size: 14px;
        margin: 0;
        color: #111827;
      }
      .hint{
        font-size: 12px;
        color: var(--muted);
      }

      .row{
        display:flex;
        gap: 12px;
        flex-wrap: wrap;
        align-items: center;
      }

      .radio-row{
        display:flex;
        align-items:center;
        gap: 10px;
        padding: 10px 10px;
        border-radius: 10px;
      }
      .radio-row:hover{ background: #f8fafc; }
      .radio-row input[type="radio"]{ transform: translateY(1px); }

      .field{
        display:flex;
        flex-direction: column;
        gap: 6px;
        min-width: 220px;
      }
      .field label{
        font-size: 12px;
        color: #111827;
        font-weight: 650;
      }
      .input{
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: 10px 12px;
        font-size: 14px;
        outline: none;
        width: 100%;
        background: #fff;
      }
      .input:focus{
        border-color: #93c5fd;
        box-shadow: 0 0 0 3px rgba(147,197,253,.35);
      }

      .btn{
        border: 1px solid var(--line);
        background: #fff;
        padding: 10px 14px;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 650;
      }
      .btn:hover{
        border-color: #cbd5e1;
        background: #f8fafc;
      }
      .btn.primary{
        border-color: #93c5fd;
        background: var(--soft);
        color: #0b3b76;
      }

      .inline{
        display:flex;
        align-items:center;
        gap: 10px;
        flex-wrap: wrap;
      }
      .mini{ width: 96px; }

      /* Result */
      .result{
        margin-top: 14px;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        overflow: hidden;
        background: #fff;
      }
      .result-head{
        background: var(--soft-2);
        padding: 10px 12px;
        font-weight: 800;
        color: #0b3b76;
      }
      .result-body{ padding: 14px 12px; }

      .result-grid{
        display:grid;
        grid-template-columns: 120px 1fr;
        gap: 10px 12px;
        align-items:center;
      }
      .result-grid .k{
        font-size: 13px;
        color: #111827;
        font-weight: 700;
      }
      .result-grid .v{
        display:flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items:center;
      }

      .pill{
        display:inline-flex;
        align-items:center;
        gap: 8px;
        padding: 8px 10px;
        border: 1px dashed #bfdbfe;
        background: #f0f7ff;
        border-radius: 10px;
        font-size: 13px;
        color: #0b3b76;
        font-weight: 650;
      }

      .table{
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        font-size: 14px;
      }
      .table th, .table td{
        border: 1px solid var(--line);
        padding: 10px 10px;
        text-align: left;
      }
      .table th{
        background: #f8fafc;
        font-weight: 800;
      }

      .muted{ color: var(--muted); font-size: 13px; }

      .foot{
        margin-top: 16px;
        display:flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
      }
      a{ color: var(--primary-2); text-decoration: none; }
      a:hover{ text-decoration: underline; }

      /* Hidden panels */
      [data-panel]{ display:none; }
      [data-panel].active{ display:block; }
    </style>
  </head>

  <body>
    <main class="wrap">
      <div class="page-title">
        <div class="icon">°</div>
        <div>°C ↔ °F Converter</div>
      </div>
      <p class="subtitle">
        To convert <strong>°C to °F</strong>, use <strong>°F = (°C × 9/5) + 32</strong>. To convert <strong>°F to °C</strong>, use <strong>°C = (°F − 32) × 5/9</strong>.
      </p>

      <section class="card" aria-label="converter">
        <!-- Tabs -->
        <div class="tabs" role="tablist" aria-label="Sections">
          <button class="tab" role="tab" aria-selected="true" data-tab="converter">Converter</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="formula">Formula</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="table">Table</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="examples">Examples</button>
          <button class="tab" role="tab" aria-selected="false" data-tab="faq">FAQ</button>
        </div>

        <div class="panel">
          <!-- Panel: Converter -->
          <div data-panel="converter" class="active">
            <div class="option-block">
              <div class="option-title">
                <h2>Interactive Converter (Cron-style options layout)</h2>
                <div class="hint">Pick a mode, then enter a value</div>
              </div>

              <div>
                <label class="radio-row">
                  <input type="radio" name="mode" value="c2f" checked />
                  <span><strong>°C → °F</strong> (convert Celsius to Fahrenheit)</span>
                </label>

                <label class="radio-row">
                  <input type="radio" name="mode" value="f2c" />
                  <span><strong>°F → °C</strong> (convert Fahrenheit to Celsius)</span>
                </label>

                <label class="radio-row">
                  <input type="radio" name="mode" value="both" />
                  <span><strong>Two-way</strong> (typing either field updates the other)</span>
                </label>
              </div>

              <div style="height: 10px;"></div>

              <div class="row">
                <div class="field">
                  <label for="cInput">Celsius (°C)</label>
                  <input
                    id="cInput"
                    class="input"
                    type="number"
                    inputmode="decimal"
                    step="any"
                    placeholder="e.g. 25"
                  />
                </div>

                <div class="field">
                  <label for="fInput">Fahrenheit (°F)</label>
                  <input
                    id="fInput"
                    class="input"
                    type="number"
                    inputmode="decimal"
                    step="any"
                    placeholder="e.g. 77"
                  />
                </div>

                <button type="button" id="clearBtn" class="btn">Clear</button>

                <div class="inline">
                  <span class="muted">Rounding</span>
                  <select id="roundSelect" class="input mini" aria-label="rounding decimals">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  </select>
                  <span class="muted">decimals</span>
                </div>
              </div>
            </div>

            <!-- Result -->
            <div class="result" aria-live="polite">
              <div class="result-head">Result</div>
              <div class="result-body">
                <div class="result-grid">
                  <div class="k">Mode</div>
                  <div class="v">
                    <span id="modeLabel" class="pill">°C → °F</span>
                  </div>

                  <div class="k">Expression</div>
                  <div class="v">
                    <input
                      id="exprOutput"
                      class="input"
                      readonly
                      value="°F = (°C × 9/5) + 32 · °C = (°F − 32) × 5/9"
                    />
                    <button type="button" id="copyBtn" class="btn primary">Copy</button>
                  </div>

                  <div class="k">Recent</div>
                  <div class="v">
                    <div class="muted" id="recentList">No conversions yet.</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Panel: Formula -->
          <div data-panel="formula">
            <div class="option-block">
              <div class="option-title">
                <h2>Quick Conversion Formula</h2>
                <div class="hint">Same content, Cron-like box</div>
              </div>
              <div class="pill">°F = (°C × 9/5) + 32</div>
              <div style="height:10px"></div>
              <div class="pill">°C = (°F − 32) × 5/9</div>
              <p class="muted" style="margin: 10px 0 0;">
                Note: -40°C equals -40°F (the two scales intersect there).
              </p>
            </div>
          </div>

          <!-- Panel: Table -->
          <div data-panel="table">
            <div class="option-block">
              <div class="option-title">
                <h2>Common Celsius to Fahrenheit Conversions</h2>
                <div class="hint">Reference table</div>
              </div>

              <table class="table">
                <thead>
                  <tr>
                    <th>Celsius (°C)</th>
                    <th>Fahrenheit (°F)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>-40</td><td>-40</td></tr>
                  <tr><td>0</td><td>32</td></tr>
                  <tr><td>10</td><td>50</td></tr>
                  <tr><td>20</td><td>68</td></tr>
                  <tr><td>25</td><td>77</td></tr>
                  <tr><td>30</td><td>86</td></tr>
                  <tr><td>37</td><td>98.6</td></tr>
                  <tr><td>100</td><td>212</td></tr>
                </tbody>
              </table>

              <p class="muted" style="margin: 10px 0 0;">
                Tip: 0°C is freezing (32°F), and ~20–25°C (68–77°F) often feels like “room temperature”.
              </p>
            </div>
          </div>

          <!-- Panel: Examples -->
          <div data-panel="examples">
            <div class="option-block">
              <div class="option-title">
                <h2>Real-World Examples</h2>
                <div class="hint">Practical understanding</div>
              </div>
              <ul style="margin: 8px 0 0; padding-left: 18px;">
                <li><strong>0°C</strong> is the freezing point of water (32°F).</li>
                <li><strong>20–25°C</strong> is comfortable indoor “room temperature” (68–77°F).</li>
                <li><strong>37°C</strong> is normal human body temperature (98.6°F).</li>
                <li><strong>100°C</strong> is boiling point of water at sea level (212°F).</li>
              </ul>

              <div style="height: 10px;"></div>
              <div class="option-title">
                <h2>Common Mistakes</h2>
                <div class="hint">Avoid errors</div>
              </div>
              <p class="muted" style="margin: 8px 0 0;">
                Most common mistake: using only × 1.8 without adding 32 when converting °C → °F.
              </p>
            </div>
          </div>

          <!-- Panel: FAQ -->
          <div data-panel="faq">
            <div class="option-block">
              <div class="option-title">
                <h2>FAQ</h2>
                <div class="hint">Quick answers</div>
              </div>
              <p style="margin: 8px 0 0;"><strong>Is 0°C the same as 0°F?</strong> No. 0°C = 32°F.</p>
              <p style="margin: 8px 0 0;"><strong>What is the easiest shortcut?</strong> °F ≈ (°C × 2) + 30 (rough estimate).</p>
              <p style="margin: 8px 0 0;"><strong>Why does the formula include 32?</strong> Because the scales have different zero points.</p>
            </div>
          </div>

          <div class="foot">
            <a href="/">← Back to Home</a>
            <span class="muted">SEO-safe, no framework</span>
          </div>
        </div>
      </section>
    </main>

    <script>
      // Tabs
      const tabs = Array.from(document.querySelectorAll(".tab"));
      const panels = Array.from(document.querySelectorAll("[data-panel]"));

      function setTab(name){
        tabs.forEach(t => {
          const active = t.dataset.tab === name;
          t.setAttribute("aria-selected", active ? "true" : "false");
        });
        panels.forEach(p => {
          p.classList.toggle("active", p.dataset.panel === name);
        });
      }
      tabs.forEach(t => t.addEventListener("click", () => setTab(t.dataset.tab)));

      // Converter UI
      const cInput = document.getElementById("cInput");
      const fInput = document.getElementById("fInput");
      const clearBtn = document.getElementById("clearBtn");
      const roundSelect = document.getElementById("roundSelect");

      const modeRadios = Array.from(document.querySelectorAll('input[name="mode"]'));
      const modeLabel = document.getElementById("modeLabel");
      const exprOutput = document.getElementById("exprOutput");
      const copyBtn = document.getElementById("copyBtn");
      const recentList = document.getElementById("recentList");

      let isUpdating = false;
      const recent = []; // store strings

      function round(value, decimals){
        const d = Number(decimals);
        if (!Number.isFinite(d)) return value;
        const factor = Math.pow(10, d);
        return Math.round(value * factor) / factor;
      }

      function getMode(){
        const checked = modeRadios.find(r => r.checked);
        return checked ? checked.value : "c2f";
      }

      function updateModeUI(){
        const mode = getMode();
        if (mode === "c2f") {
          modeLabel.textContent = "°C → °F";
          exprOutput.value = "°F = (°C × 9/5) + 32";
          cInput.disabled = false;
          fInput.disabled = true;
          fInput.value = "";
          cInput.focus();
        } else if (mode === "f2c") {
          modeLabel.textContent = "°F → °C";
          exprOutput.value = "°C = (°F − 32) × 5/9";
          fInput.disabled = false;
          cInput.disabled = true;
          cInput.value = "";
          fInput.focus();
        } else {
          modeLabel.textContent = "Two-way";
          exprOutput.value = "°F = (°C × 9/5) + 32 · °C = (°F − 32) × 5/9";
          cInput.disabled = false;
          fInput.disabled = false;
        }
        renderRecent();
      }

      function pushRecent(text){
        if (!text) return;
        recent.unshift(text);
        if (recent.length > 10) recent.pop();
        renderRecent();
      }

      function renderRecent(){
        if (recent.length === 0){
          recentList.textContent = "No conversions yet.";
          return;
        }
        recentList.innerHTML = recent.map(s => `<div>• ${s}</div>`).join("");
      }

      function convertFromC(){
        const c = parseFloat(cInput.value);
        const decimals = roundSelect.value;
        if (!Number.isFinite(c)){
          fInput.value = "";
          return;
        }
        const f = (c * 9/5) + 32;
        fInput.value = round(f, decimals);
        pushRecent(`${c} °C = ${fInput.value} °F`);
      }

      function convertFromF(){
        const f = parseFloat(fInput.value);
        const decimals = roundSelect.value;
        if (!Number.isFinite(f)){
          cInput.value = "";
          return;
        }
        const c = (f - 32) * 5/9;
        cInput.value = round(c, decimals);
        pushRecent(`${f} °F = ${cInput.value} °C`);
      }

      cInput.addEventListener("input", () => {
        if (isUpdating) return;
        const mode = getMode();
        if (mode === "f2c") return;

        isUpdating = true;
        convertFromC();
        isUpdating = false;
      });

      fInput.addEventListener("input", () => {
        if (isUpdating) return;
        const mode = getMode();
        if (mode === "c2f") return;

        isUpdating = true;
        convertFromF();
        isUpdating = false;
      });

      roundSelect.addEventListener("change", () => {
        const mode = getMode();
        isUpdating = true;
        if (mode === "c2f") convertFromC();
        else if (mode === "f2c") convertFromF();
        else {
          const c = parseFloat(cInput.value);
          const f = parseFloat(fInput.value);
          if (Number.isFinite(c)) convertFromC();
          else if (Number.isFinite(f)) convertFromF();
        }
        isUpdating = false;
      });

      modeRadios.forEach(r => r.addEventListener("change", updateModeUI));

      clearBtn.addEventListener("click", () => {
        cInput.value = "";
        fInput.value = "";
        recent.length = 0;
        renderRecent();
        updateModeUI();
      });

      copyBtn.addEventListener("click", async () => {
        const text = exprOutput.value || "";
        try{
          await navigator.clipboard.writeText(text);
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }catch(e){
          exprOutput.select();
          document.execCommand("copy");
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }
      });

      // init
      updateModeUI();
    </script>
  </body>
</html>
