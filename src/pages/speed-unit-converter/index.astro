    <script>
      // -----------------------
      // Tabs (robust)
      // -----------------------
      const tabs = Array.from(document.querySelectorAll(".tab"));
      const panels = Array.from(document.querySelectorAll("[data-panel]"));
      function setTab(name){
        tabs.forEach(t => t.setAttribute("aria-selected", t.dataset.tab === name ? "true" : "false"));
        panels.forEach(p => p.classList.toggle("active", p.dataset.panel === name));
      }
      tabs.forEach(t => {
        t.type = "button";
        t.addEventListener("click", (e) => { e.preventDefault(); setTab(t.dataset.tab); });
      });
      const initialTab =
        tabs.find(t => t.getAttribute("aria-selected") === "true")?.dataset.tab
        || tabs[0]?.dataset.tab
        || "calc";
      setTab(initialTab);

      // -----------------------
      // Helpers
      // -----------------------
      const $ = (id) => document.getElementById(id);

      function num(v){
        const x = parseFloat(v);
        return Number.isFinite(x) ? x : NaN;
      }

      function fmt(x){
        if (!Number.isFinite(x)) return "‚Äî";
        const ax = Math.abs(x);
        const digits = ax >= 1000 ? 2 : ax >= 100 ? 3 : ax >= 10 ? 4 : 6;
        return x.toLocaleString("en-US", { maximumFractionDigits: digits });
      }

      // Convert any unit to m/s (base)
      function toMS(value, unit){
        if (!Number.isFinite(value)) return NaN;
        switch(unit){
          case "mph": return value * 0.44704;          // exact
          case "kmh": return value * (1000/3600);      // exact
          case "ms":  return value;
          case "fts": return value * 0.3048;           // exact
          case "kt":  return value * (1852/3600);      // exact
          default: return NaN;
        }
      }

      // Convert m/s to unit
      function fromMS(ms, unit){
        if (!Number.isFinite(ms)) return NaN;
        switch(unit){
          case "mph": return ms / 0.44704;
          case "kmh": return ms / (1000/3600);
          case "ms":  return ms;
          case "fts": return ms / 0.3048;
          case "kt":  return ms / (1852/3600);
          default: return NaN;
        }
      }

      function unitLabel(u){
        if (u === "kmh") return "km/h";
        if (u === "ms") return "m/s";
        if (u === "fts") return "ft/s";
        if (u === "kt") return "knots";
        return "mph";
      }

      // -----------------------
      // DOM refs
      // -----------------------
      const valA = $("valA");
      const unitA = $("unitA");
      const valB = $("valB");
      const unitB = $("unitB");
      const swapBtn = $("swapBtn");
      const clearBtn = $("clearBtn");

      // outputs
      const statusPill = $("statusPill");
      const summaryLine = $("summaryLine");
      const outMain = $("outMain");
      const outSub = $("outSub");
      const badgePair = $("badgePair");
      const outContext = $("outContext");
      const warnBox = $("warnBox");
      const allOutputs = $("allOutputs");

      // recent
      const recentList = $("recentList");
      const copyBtn = $("copyBtn");
      const recent = [];

      let activeSide = "A"; // "A" or "B" ‚Äî which input the user last edited

      function setStatus(ok, text){
        statusPill.classList.toggle("ok", ok);
        statusPill.classList.toggle("wait", !ok);
        statusPill.textContent = text;
      }

      function pushRecent(text){
        if (!text) return;
        recent.unshift(text);
        if (recent.length > 10) recent.pop();
        renderRecent();
      }

      function renderRecent(){
        if (recent.length === 0){
          recentList.textContent = "No conversions yet.";
          return;
        }
        recentList.innerHTML = recent.map(s => `<div>‚Ä¢ ${s}</div>`).join("");
      }

      function renderAll(ms){
        const units = ["mph","kmh","ms","fts","kt"];
        allOutputs.innerHTML = units.map(u => {
          const v = fromMS(ms, u);
          return `
            <div class="out">
              <div class="k"><span>${unitLabel(u)}</span><span class="badge">unit</span></div>
              <div class="v mono">${fmt(v)}</div>
              <div class="u">Converted from the current input</div>
            </div>
          `;
        }).join("");
      }

      function contextHint(ms){
        if (!Number.isFinite(ms)) return "‚Äî";
        const mph = fromMS(ms, "mph");
        if (mph < 1) return "Very slow (walking pace or less)";
        if (mph < 4) return "Walking / jogging range";
        if (mph < 20) return "City streets / biking range";
        if (mph < 60) return "Typical urban driving";
        if (mph < 90) return "Highway driving";
        return "Very fast (racing / high-speed travel)";
      }

      function compute(){
        warnBox.style.display = "none";
        warnBox.textContent = "";

        const ua = unitA.value;
        const ub = unitB.value;

        // read whichever side is active
        const a = num(valA.value);
        const b = num(valB.value);

        let ms = NaN;
        let fromVal = NaN, fromUnit = ua, toUnit = ub;

        if (activeSide === "A"){
          fromVal = a;
          ms = toMS(a, ua);
        } else {
          fromVal = b;
          ms = toMS(b, ub);
          // if editing B, we treat B as "from" and show A as "to" for main conversion
          fromUnit = ub;
          toUnit = ua;
        }

        if (!Number.isFinite(fromVal)){
          setStatus(false, "Waiting");
          summaryLine.textContent = "Enter a speed value to convert.";
          outMain.textContent = "‚Äî";
          outSub.textContent = "‚Äî";
          badgePair.textContent = "‚Äî";
          outContext.textContent = "‚Äî";
          allOutputs.innerHTML = `<div class="out"><div class="k"><span>‚Äî</span><span class="badge">unit</span></div><div class="v">‚Äî</div><div class="u">Enter a value above</div></div>`;
          return;
        }

        if (Math.abs(fromVal) > 1e9){
          warnBox.style.display = "block";
          warnBox.textContent = "That number is extremely large. The math still works, but it may not be meaningful.";
        }

        // update the opposite field
        if (activeSide === "A"){
          const out = fromMS(ms, ub);
          if (Number.isFinite(out)) valB.value = String(out);
        } else {
          const out = fromMS(ms, ua);
          if (Number.isFinite(out)) valA.value = String(out);
        }

        // main display (always show active input -> other unit)
        const shownTo = (activeSide === "A") ? ub : ua;
        const shownToVal = fromMS(ms, shownTo);

        setStatus(true, "Ready");
        badgePair.textContent = `${unitLabel(fromUnit)} ‚Üí ${unitLabel(shownTo)}`;
        summaryLine.textContent = `${fmt(fromVal)} ${unitLabel(fromUnit)} equals‚Ä¶`;

        outMain.textContent = `${fmt(shownToVal)} ${unitLabel(shownTo)}`;
        outSub.textContent = `Base: ${fmt(ms)} m/s`;
        outContext.textContent = contextHint(ms);

        renderAll(ms);

        // recent
        const rec = `${fmt(fromVal)} ${unitLabel(fromUnit)} ‚Üí ${fmt(shownToVal)} ${unitLabel(shownTo)}`;
        pushRecent(rec);
      }

      function bindAll(){
        valA.addEventListener("input", () => { activeSide = "A"; compute(); });
        valB.addEventListener("input", () => { activeSide = "B"; compute(); });

        [unitA, unitB].forEach(el => {
          el.addEventListener("change", () => { compute(); });
        });

        swapBtn.addEventListener("click", () => {
          // swap units
          const tmpU = unitA.value;
          unitA.value = unitB.value;
          unitB.value = tmpU;

          // swap values too (keeps UI intuitive)
          const tmpV = valA.value;
          valA.value = valB.value;
          valB.value = tmpV;

          // keep the same active side
          compute();
        });

        clearBtn.addEventListener("click", () => {
          valA.value = "";
          valB.value = "";
          unitA.value = "mph";
          unitB.value = "kmh";
          activeSide = "A";
          recent.length = 0;
          renderRecent();
          compute();
        });

        copyBtn.addEventListener("click", async () => {
          const text = recent.length ? recent[0] : "";
          if (!text) return;
          try{
            await navigator.clipboard.writeText(text);
            copyBtn.textContent = "Copied";
            setTimeout(() => (copyBtn.textContent = "Copy"), 900);
          }catch(e){
            copyBtn.textContent = "Copy failed";
            setTimeout(() => (copyBtn.textContent = "Copy"), 900);
          }
        });
      }

      bindAll();
      renderRecent();
      compute();
    </script>
  </body>
