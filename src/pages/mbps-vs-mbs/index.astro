          </div>

          <!-- Panel: FAQ -->
          <div data-panel="faq">
            <div class="option-block">
              <div class="option-title">
                <h2>FAQ</h2>
                <div class="hint">Quick answers</div>
              </div>

              <p style="margin: 8px 0 0;">
                <strong>What does Mbps mean?</strong> Megabits per second. It’s how ISPs usually advertise speed.
              </p>
              <p style="margin: 8px 0 0;">
                <strong>What does MB/s mean?</strong> Megabytes per second. Apps often show this during downloads or file copies.
              </p>
              <p style="margin: 8px 0 0;">
                <strong>Why is my download slower than the math?</strong> Overhead (TCP/IP, encryption), Wi-Fi signal, busy servers, router limits, etc.
              </p>
              <p style="margin: 8px 0 0;">
                <strong>How do I convert quickly?</strong> Divide by 8: <strong>240 Mbps ≈ 30 MB/s</strong>.
              </p>
            </div>
          </div>

          <div class="foot">
            <a href="/">← Back to Home</a>
            <span class="muted">SEO-safe, no framework</span>
          </div>
        </div>
      </section>
    </main>

    <script>
      // Mbps vs MB/s
      // - Mbps is megabits/second
      // - MB/s is megabytes/second
      // 1 Byte = 8 bits, so:
      //   MB/s = Mbps / 8
      //   Mbps = MB/s * 8
      //
      // Optional: MiB/s is binary megabytes:
      //   1 MiB = 1,048,576 bytes
      //   1 MB  = 1,000,000 bytes
      // If user toggles MiB/s, we convert Mbps -> MiB/s using:
      //   Mbps (megabits/s) -> bytes/s: (Mbps * 1,000,000) / 8
      //   bytes/s -> MiB/s: / 1,048,576
      // => MiB/s = Mbps * 1,000,000 / 8 / 1,048,576

      const BITS_PER_BYTE = 8;
      const DECIMAL = { MB: 1_000_000, Mb: 1_000_000 };
      const BINARY = { MiB: 1_048_576 };

      // Tabs
      const tabs = Array.from(document.querySelectorAll(".tab"));
      const panels = Array.from(document.querySelectorAll("[data-panel]"));

      function setTab(name){
        tabs.forEach(t => {
          const active = t.dataset.tab === name;
          t.setAttribute("aria-selected", active ? "true" : "false");
        });
        panels.forEach(p => p.classList.toggle("active", p.dataset.panel === name));
      }
      tabs.forEach(t => t.addEventListener("click", () => setTab(t.dataset.tab)));

      // Converter UI
      const mbpsInput = document.getElementById("mbpsInput");
      const mbsInput = document.getElementById("mbsInput");
      const clearBtn = document.getElementById("clearBtn");
      const roundSelect = document.getElementById("roundSelect");
      const useMiB = document.getElementById("useMiB");

      const modeRadios = Array.from(document.querySelectorAll('input[name="mode"]'));
      const modeLabel = document.getElementById("modeLabel");
      const unitLabel = document.getElementById("unitLabel");
      const exprOutput = document.getElementById("exprOutput");
      const copyBtn = document.getElementById("copyBtn");
      const recentList = document.getElementById("recentList");

      let isUpdating = false;
      const recent = [];

      function round(value, decimals){
        const d = Number(decimals);
        if (!Number.isFinite(d)) return value;
        const factor = Math.pow(10, d);
        return Math.round(value * factor) / factor;
      }

      function getMode(){
        const checked = modeRadios.find(r => r.checked);
        return checked ? checked.value : "mbps2mbs";
      }

      function getUnits(){
        return useMiB.checked ? "MiB/s" : "MB/s";
      }

      function mbpsToMBps(mbps){
        // decimal MB/s
        return mbps / BITS_PER_BYTE;
      }

      function MBpsToMbps(mbps){
        return mbps * BITS_PER_BYTE;
      }

      function mbpsToMiBps(mbps){
        // bytes/s = (mbps * 1,000,000 bits/s) / 8
        // MiB/s = bytes/s / 1,048,576
        return (mbps * DECIMAL.Mb) / BITS_PER_BYTE / BINARY.MiB;
      }

      function MiBpsToMbps(mibps){
        // reverse of above:
        // bytes/s = MiB/s * 1,048,576
        // bits/s = bytes/s * 8
        // Mbps = bits/s / 1,000,000
        return (mibps * BINARY.MiB * BITS_PER_BYTE) / DECIMAL.Mb;
      }

      function pushRecent(text){
        if (!text) return;
        recent.unshift(text);
        if (recent.length > 10) recent.pop();
        renderRecent();
      }

      function renderRecent(){
        if (recent.length === 0){
          recentList.textContent = "No conversions yet.";
          return;
        }
        recentList.innerHTML = recent.map(s => `<div>• ${s}</div>`).join("");
      }

      function updateModeUI(){
        const mode = getMode();
        const unit = getUnits();

        if (mode === "mbps2mbs"){
          modeLabel.textContent = "Mbps → " + unit;
          exprOutput.value = unit === "MB/s" ? "MB/s = Mbps ÷ 8" : "MiB/s = Mbps × 1,000,000 ÷ 8 ÷ 1,048,576";
          mbpsInput.disabled = false;
          mbsInput.disabled = true;
          mbsInput.value = "";
          mbpsInput.focus();
        } else if (mode === "mbs2mbps"){
          modeLabel.textContent = unit + " → Mbps";
          exprOutput.value = unit === "MB/s" ? "Mbps = MB/s × 8" : "Mbps = MiB/s × 1,048,576 × 8 ÷ 1,000,000";
          mbsInput.disabled = false;
          mbpsInput.disabled = true;
          mbpsInput.value = "";
          mbsInput.focus();
        } else {
          modeLabel.textContent = "Two-way";
          exprOutput.value = unit === "MB/s"
            ? "MB/s = Mbps ÷ 8 · Mbps = MB/s × 8"
            : "MiB/s = Mbps × 1,000,000 ÷ 8 ÷ 1,048,576 · Mbps = MiB/s × 1,048,576 × 8 ÷ 1,000,000";
          mbpsInput.disabled = false;
          mbsInput.disabled = false;
        }

        unitLabel.textContent = useMiB.checked ? "Binary (MiB/s)" : "Decimal (MB/s)";
        renderRecent();
      }

      function convertFromMbps(){
        const mbps = parseFloat(mbpsInput.value);
        const decimals = roundSelect.value;
        if (!Number.isFinite(mbps)){
          mbsInput.value = "";
          return;
        }

        const out = useMiB.checked ? mbpsToMiBps(mbps) : mbpsToMBps(mbps);
        const unit = getUnits();
        mbsInput.value = round(out, decimals);
        pushRecent(`${mbps} Mbps ≈ ${mbsInput.value} ${unit}`);
      }

      function convertFromMBs(){
        const val = parseFloat(mbsInput.value);
        const decimals = roundSelect.value;
        if (!Number.isFinite(val)){
          mbpsInput.value = "";
          return;
        }

        const out = useMiB.checked ? MiBpsToMbps(val) : MBpsToMbps(val);
        mbpsInput.value = round(out, decimals);
        pushRecent(`${val} ${getUnits()} ≈ ${mbpsInput.value} Mbps`);
      }

      mbpsInput.addEventListener("input", () => {
        if (isUpdating) return;
        const mode = getMode();
        if (mode === "mbs2mbps") return;

        isUpdating = true;
        convertFromMbps();
        isUpdating = false;
      });

      mbsInput.addEventListener("input", () => {
        if (isUpdating) return;
        const mode = getMode();
        if (mode === "mbps2mbs") return;

        isUpdating = true;
        convertFromMBs();
        isUpdating = false;
      });

      roundSelect.addEventListener("change", () => {
        const mode = getMode();
        isUpdating = true;
        if (mode === "mbps2mbs") convertFromMbps();
        else if (mode === "mbs2mbps") convertFromMBs();
        else {
          const mbps = parseFloat(mbpsInput.value);
          const val = parseFloat(mbsInput.value);
          if (Number.isFinite(mbps)) convertFromMbps();
          else if (Number.isFinite(val)) convertFromMBs();
        }
        isUpdating = false;
      });

      modeRadios.forEach(r => r.addEventListener("change", updateModeUI));

      useMiB.addEventListener("change", () => {
        // recompute based on current filled value
        const mode = getMode();
        isUpdating = true;
        updateModeUI();
        if (mode === "mbps2mbs"){
          convertFromMbps();
        } else if (mode === "mbs2mbps"){
          convertFromMBs();
        } else {
          const mbps = parseFloat(mbpsInput.value);
          const val = parseFloat(mbsInput.value);
          if (Number.isFinite(mbps)) convertFromMbps();
          else if (Number.isFinite(val)) convertFromMBs();
        }
        isUpdating = false;
      });

      clearBtn.addEventListener("click", () => {
        mbpsInput.value = "";
        mbsInput.value = "";
        recent.length = 0;
        renderRecent();
        updateModeUI();
      });

      copyBtn.addEventListener("click", async () => {
        const text = exprOutput.value || "";
        try{
          await navigator.clipboard.writeText(text);
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }catch(e){
          exprOutput.select();
          document.execCommand("copy");
          copyBtn.textContent = "Copied";
          setTimeout(() => (copyBtn.textContent = "Copy"), 900);
        }
      });

      // init
      updateModeUI();
    </script>
