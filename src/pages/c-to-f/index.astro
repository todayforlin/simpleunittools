---
const title = "Celsius to Fahrenheit Converter";
const description =
  "Convert Celsius to Fahrenheit instantly with a simple calculator and formula.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <main style="max-width:800px;margin:2rem auto;font-family:system-ui,sans-serif;">
      <h1>Celsius to Fahrenheit Converter</h1>

      <input id="c" type="number" placeholder="°C" oninput="convert()" />
      <p><strong>°F:</strong> <span id="f">—</span></p>

      <script>
        function convert() {
          const c = document.getElementById("c").value;
          document.getElementById("f").textContent =
            c ? (c * 9/5 + 32).toFixed(2) : "—";
        }
      </script>

      <h2>Formula</h2>
      <p><strong>°F = (°C × 9/5) + 32</strong></p>

      <p><a href="/">← Back to Home</a></p>
    </main>
  </body>
</html>
